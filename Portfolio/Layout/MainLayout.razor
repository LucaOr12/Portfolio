@using Portfolio.Pages
@inherits LayoutComponentBase

<TopBar OnToggleNav="ToggleNav" IsNavOpen="@isNavOpen" />
<NavBar IsOpen="@isNavOpen" OnClose="CloseNav" />

<div class="scroll-container">
    <div id="home" class="scroll-section"><Home /></div>
    <div id="about" class="scroll-section"><AboutMe /></div>
    <div id="projects" class="scroll-section"><Projects /></div>
    <div id="contact" class="scroll-section"><Contacts /></div>
</div>

@code {
    private bool isNavOpen = false;

    void ToggleNav() => isNavOpen = !isNavOpen;
    void CloseNav() => isNavOpen = false;
}


